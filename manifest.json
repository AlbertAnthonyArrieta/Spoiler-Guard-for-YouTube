{
    "manifest_version": 3,
    "name": "Spoiler Guard for YouTube",
    "description": "A simple spoiler blocker for YouTube.",
    "version": "1.0",
    "icons": {
        "16": "icons/xxs.png",
        "19": "icons/xs.png",
        "38": "icons/small.png",
        "48": "icons/med.png",
        "128": "icons/lg.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "scripts.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {   
            "resources":[
                "images/*"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ]
}